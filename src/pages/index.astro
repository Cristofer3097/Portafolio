---
// filepath: /c:/Users/abel_/portafolio/src/pages/index.astro

import Layout from '../layouts/Layout.astro';
import IntroContent from '../components/Intro.astro';
import MailIcon from '../icons/Mail.astro';
import Experience from '../components/Experience.astro';
import ExperienceIcon from '../icons/Experience.astro';
import Sectionclass from '../components/Section.astro';
import ProjectsIcon from '../icons/DeviceCode.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import Certificate from '../components/Certificate.astro';
import Education from '../components/Education.astro';
import AboutmeIcon from '../icons/About.astro';
import Menu from '../components/Menu.astro';
import About from '../components/About.astro';
import Skills from '../components/Skills.astro';

---

<Layout title="Abel Cristofer Portafolio - Developer con 2 años de experiencia" description="Desarrollador Web / Realidad Virtual y tecnologías modernas">
<Menu />
    <main class="px-4">
    
    <Sectionclass id="top" class="relative py-40 pb-60 flex flex-col lg:flex-row items-center justify-between lg:my-0 lg:w-[800px] ">
        <IntroContent />
    </Sectionclass>
    
    <Sectionclass id="experience" class="scroll-mt-24 mt-28">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white">Experiencia Laboral
            <ExperienceIcon class="size-6" />
        </h2>
        <Experience />
    </Sectionclass>

    <Sectionclass id="proyectos" class="scroll-mt-24">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white">Proyectos
            <ProjectsIcon class="size-6" />
        </h2>
        <Projects />
    </Sectionclass>

    <Sectionclass id="sobremi" class="scroll-mt-24">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white">Sobre mi
            <AboutmeIcon class="size-6" />
        </h2>
        <About />
        <Education id="education" />
        <Certificate id="certificate" />
        <Skills id="skills" />
    </Sectionclass>

    <Sectionclass id="contactos" class="scroll-mt-20">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white">Contacto
            <MailIcon class="size-6" />
        </h2>
        <Contact />
    </Sectionclass>
    <Footer />
</main>
</Layout>


---
import Layout from '../layouts/Layout.astro';
import IntroContent from '../components/Intro.astro';
import MailIcon from '../icons/Mail.astro';
import Experience from '../components/Experience.astro';
import ExperienceIcon from '../icons/Experience.astro';
import Sectionclass from '../components/Section.astro';
import ProjectsIcon from '../icons/DeviceCode.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import Certificate from '../components/Certificate.astro';
import Education from '../components/Education.astro';
import AboutmeIcon from '../icons/About.astro';
import Menu from '../components/Menu.astro';
import About from '../components/About.astro';
import Skills from '../components/Skills.astro';



---

<Layout title="Abel Cristofer Portafolio - Developer con 2 años de experiencia" description="Desarrollador Web / Realidad Virtual y tecnologías modernas">
<Menu />
  <main class="px-4">
    <Sectionclass id="top" class="scroll-spy-section relative py-40 pb-56 flex flex-col lg:flex-row items-center justify-between lg:my-0 lg:w-[800px] ">
      <IntroContent />
    </Sectionclass>
    
    <Sectionclass id="experience" class="scroll-spy-section scroll-mt-24 mt-4 opacity-0 translate-y-10 transition-all duration-700 ease-in-out">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white dark:text-neutral-900"><span data-translate="index.experience"></span>
        <ExperienceIcon class="size-6" />
      </h2>
      <Experience />
    </Sectionclass>

    <Sectionclass id="proyectos" class="scroll-spy-section scroll-mt-24">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white dark:text-neutral-900"><span data-translate="index.project"></span>
        <ProjectsIcon class="size-6" />
      </h2>
      <Projects />
    </Sectionclass>

    <Sectionclass id="sobremi" class="scroll-spy-section scroll-mt-24">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white dark:text-neutral-900"><span data-translate="index.about"></span>
        <AboutmeIcon class="size-6" />
      </h2>
      <About />
      <Education id="education" class="scroll-spy-section" />
      <Certificate id="certificate" class="scroll-spy-section" />
      <Skills id="skills" class="scroll-spy-section" />
    </Sectionclass>

    <Sectionclass id="contactos" class="scroll-spy-section scroll-mt-20">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white dark:text-neutral-900"><span data-translate="index.contact"></span>
        <MailIcon class="size-6" />
      </h2>
      <Contact />
    </Sectionclass>
    <Footer />
  </main>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Manejo del menú desplegable
        const menuToggle = document.getElementById("menu-toggle");
        const navMenu = document.getElementById("nav-menu");
        const closeMenu = document.getElementById("close-menu");
        const navLinks = document.querySelectorAll("#nav-menu a");
    
        if (menuToggle && navMenu && closeMenu) {
            menuToggle.addEventListener("click", () => {
                navMenu.classList.remove("translate-x-full");
                navMenu.classList.add("translate-x-0");
            });
    
            closeMenu.addEventListener("click", () => {
                navMenu.classList.remove("translate-x-0");
                navMenu.classList.add("translate-x-full");
            });
    
            // Cerrar menú al hacer clic en un enlace
            navLinks.forEach(link => {
                link.addEventListener("click", () => {
                    navMenu.classList.remove("translate-x-0");
                    navMenu.classList.add("translate-x-full");
                });
            });
        }
    
        // Animación para la sección de experiencia
        const experienceSection = document.getElementById("experience");
    
        if (experienceSection) {
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            experienceSection.classList.remove("opacity-0", "translate-y-10");
                        }
                    });
                },
                { threshold: 0.2 }
            );
    
            observer.observe(experienceSection);
        }
    });
    </script>
    
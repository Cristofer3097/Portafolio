<html class="dark">
  <head>
  </head>
  <body class="bg-gray-900 dark:bg-white">
    <header class="fixed top-0 left-0 w-full max-w-screen flex justify-between items-center px-5 py-4 backdrop-blur-[15px] text-white dark:text-gray-900 z-50">
      <!-- Sección izquierda: Botón de cambio de tema + Título -->
      <div class="flex items-center space-x-4">
        <h1 class="text-2xl font-bold" id="header-title" data-translate="header.title">Portafolio</h1>
      </div>

      <!-- Sección derecha: Botón de tema, cambio de idioma y menú lateral -->
      <div class="flex items-center space-x-4 md:space-x-6 rtl:space-x-reverse flex-wrap">
        <!-- Botón de cambio de tema -->
        <button id="theme-toggle" class="p-2 rounded focus:outline-none">
          <span id="theme-icon">
            <!-- Con modo oscuro por defecto se muestra el ícono de sol (para cambiar a modo claro) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m8.66-8.66h-1M4.34 12H3m15.36-6.36l-.7.7m-12.02 12.02l-.7.7m12.02.7l-.7-.7M6.34 6.34l-.7-.7M12 5a7 7 0 100 14 7 7 0 000-14z" />
            </svg>
          </span>
        </button>

        <!-- Botón de cambio de idioma -->
        <button type="button" data-dropdown-toggle="language-dropdown-menu"
          class="inline-flex items-center font-medium justify-center border bg-slate-950/30 border-violet-700/50 px-4 py-2 text-sm text-white dark:text-white rounded-lg cursor-pointer hover:bg-violet-900 dark:hover:bg-gray-700 dark:hover:text-white hover:scale-105 hover:shadow-violet-900 hover:shadow-lg transition-all">
          <span id="current-language">Spanish</span>
        </button>

        <!-- Menú de idiomas -->
        <div class="z-50 hidden my-4 text-base list-none rounded-full bg-slate-950/70 border border-violet-700/50 divide-y divide-gray-100 rounded-lg shadow-sm" id="language-dropdown-menu">
          <ul class="py-2 font-medium" role="none">
            <li>
              <a href="#" class="block px-4 py-2 text-sm text-white hover:bg-violet-950 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem" data-lang="es">
                <div class="inline-flex items-center hover:underline">
                  <img src="data:image/png;base64," 
                  alt="" width="20" height="20"> 
                  ES Español
                </div>
              </a>
            </li>
            <li>
              <a href="#" class="block px-4 py-2 text-sm text-white hover:bg-violet-950 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem" data-lang="en">
                <div class="inline-flex items-center hover:underline">
                  <img src="data:image/png;base64," 
                  alt="" width="20" height="20">
                  En English
                </div>
              </a>
            </li>
          </ul>
        </div>

        <!-- Botón para abrir el menú lateral -->
        <button id="menu-toggle" class="block lg:hidden text-white dark:text-gray-900 focus:outline-none">
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>

      <!-- Menú lateral -->
      <nav id="nav-menu" class="fixed top-0 right-0 w-64 h-screen bg-slate-950/90 text-white dark:bg-gray-200 dark:text-gray-900 rounded-lg py-2 p-6 flex flex-col items-center justify-center transform translate-x-full transition-transform duration-500 ease-in-out z-50">
        <button id="close-menu" class="absolute top-4 right-4 text-white dark:text-gray-900 text-3xl">&times;</button>
        <a href="#top" class="px-2 mt-5 block text-lg rounded-lg py-2 hover:underline" data-translate="header.home">Inicio</a>
        <a href="#experience" class="py-2 px-2 mt-5 block text-lg rounded-lg hover:underline" data-translate="header.experience">Experiencia</a>
        <a href="#sobremi" class="py-2 px-2 mt-5 block text-lg rounded-lg hover:underline" data-translate="header.about">Sobre mí</a>
        <a href="#proyectos" class="py-2 px-2 mt-5 block text-lg rounded-lg hover:underline" data-translate="header.projects">Proyectos</a>
        <a href="#contactos" class="py-2 px-2 mt-5 block text-lg rounded-lg hover:underline" data-translate="header.contact">Contacto</a>
      </nav>
    </header>

    <!-- Resto de tu contenido -->

    <script>
      document.addEventListener('DOMContentLoaded', () => {
      //Cambio de idioma
      const menuToggle = document.getElementById('menu-toggle');
      const navMenu = document.getElementById('nav-menu');
      const closeMenu = document.getElementById('close-menu');
      const navLinks = document.querySelectorAll('#nav-menu a');
  
      if (menuToggle && navMenu && closeMenu) {
        // Abrir menú
        menuToggle.addEventListener('click', (e) => {
          e.stopPropagation(); // evita que el clic se propague y lo cierre
          navMenu.classList.remove('translate-x-full');
          navMenu.classList.add('translate-x-0');
        });
  
        // Cerrar menú
        closeMenu.addEventListener('click', () => {
          navMenu.classList.remove('translate-x-0');
          navMenu.classList.add('translate-x-full');
        });
  
        // Cerrar menú al hacer clic en un enlace
        navLinks.forEach(link => {
          link.addEventListener('click', () => {
            navMenu.classList.remove('translate-x-0');
            navMenu.classList.add('translate-x-full');
          });
        });
  
        // Evita que el menú se cierre si hacemos clic dentro
        navMenu.addEventListener('click', (e) => {
          e.stopPropagation();
        });
  
        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', () => {
          navMenu.classList.remove('translate-x-0');
          navMenu.classList.add('translate-x-full');
        });
      }
  
      /*****************************************************
       * 2. LÓGICA DE IDIOMAS Y TRADUCCIONES
       *****************************************************/
      const languageMenu = document.getElementById('language-dropdown-menu');
      const currentLanguage = document.getElementById('current-language');
      const languageToggleButton = document.getElementById('languageToggleButton'); // Botón
      let translations = {};
      let lang = 'es'; // Idioma por defecto
  
      // Cargar JSON de idioma
      async function loadLanguage(langCode) {
        const response = await fetch(`/locales/${langCode}.json`);
        translations = await response.json();
        applyTranslations();
      }
  
      // Aplicar traducciones
      function applyTranslations() {
        // data-translate
        const elements = document.querySelectorAll('[data-translate]');
        elements.forEach(element => {
          const translationKey = element.getAttribute('data-translate');
          element.textContent = getNestedValue(translations, translationKey);
        });
  
        // data-translate-experience
        const experienceElements = document.querySelectorAll('[data-translate-experience]');
        experienceElements.forEach((element, index) => {
          const exp = translations.experience?.[index];
          if (exp) {
            element.querySelector('.experience-title').textContent = exp.title;
            element.querySelector('.experience-date').textContent = exp.date;
            element.querySelectorAll('.experience-description').forEach((descElement, i) => {
              descElement.textContent = exp.description[i] || '';
            });
          }
        });
  
        // data-translate-project
        const projectElements = document.querySelectorAll('[data-translate-project]');
        projectElements.forEach((element, index) => {
          const proj = translations.project?.[index];
          if (proj) {
            element.querySelector('.project-description').textContent = proj.description;
          }
        });
  
        // data-translate-placeholder
        const placeholderElements = document.querySelectorAll('[data-translate-placeholder]');
        placeholderElements.forEach(el => {
          const translationKey = el.getAttribute('data-translate-placeholder');
          el.placeholder = getNestedValue(translations, translationKey);
        });
  
        // data-translate-title
        const titleElements = document.querySelectorAll('[data-translate-title]');
        titleElements.forEach(el => {
          const translationKey = el.getAttribute('data-translate-title');
          el.setAttribute('title', getNestedValue(translations, translationKey));
        });
  
        // Texto del botón de idioma
        currentLanguage.textContent = (lang === 'es') ? 'Es Español' : 'En English';
      }
  
      // Obtener valor anidado
      function getNestedValue(obj, key) {
        return key.split('.').reduce((o, k) => (o || {})[k], obj);
      }
  
      // Inicial
      loadLanguage(lang);
  
      // Botones con data-lang
      document.querySelectorAll('[data-lang]').forEach(button => {
        button.addEventListener('click', (e) => {
          e.preventDefault();
          lang = button.getAttribute('data-lang');
          loadLanguage(lang);
          languageMenu.classList.add('hidden');
        });
      });
  
      // Clic en el botón de idioma
      if (languageToggleButton && languageMenu) {
        // Evita que el clic se propague
        languageToggleButton.addEventListener('click', (e) => {
          e.stopPropagation();
          languageMenu.classList.toggle('hidden');
        });
  
        // Evita que el menú se cierre si hacemos clic dentro
        languageMenu.addEventListener('click', (e) => {
          e.stopPropagation();
        });
  
        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', () => {
          languageMenu.classList.add('hidden');
        });
      }
     // Lógica del cambio de tema (oscuro/claro)
     const themeToggle = document.getElementById('theme-toggle');
          const themeIcon = document.getElementById('theme-icon');
  
          function setDarkMode(enabled) {
            if (enabled) {
              document.documentElement.classList.add('dark');
              themeIcon.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m8.66-8.66h-1M4.34 12H3m15.36-6.36l-.7.7m-12.02 12.02l-.7.7m12.02.7l-.7-.7M6.34 6.34l-.7-.7M12 5a7 7 0 100 14 7 7 0 000-14z" />
              </svg>`;
            } else {
              document.documentElement.classList.remove('dark');
              themeIcon.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" />
              </svg>`;
            }
            localStorage.setItem('theme', enabled ? 'dark' : 'light');
          }
  
          themeToggle.addEventListener('click', () => {
            const isDark = document.documentElement.classList.contains('dark');
            setDarkMode(!isDark);
          });
  
          const storedTheme = localStorage.getItem('theme');
          if (storedTheme === 'light') {
            setDarkMode(false);
          } else {
            setDarkMode(true);
          }
        });
      </script>
    </body>
  </html>
  </script>
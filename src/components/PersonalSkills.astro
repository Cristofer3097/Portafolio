---
import ComunicationIcon from '../icons/Comunication.astro';
import GroupIcon from '../icons/Group.astro';
import BulbIcon from '../icons/Bulb.astro';
import TimeIcon from '../icons/Time.astro';
import ProactiveIcon from '../icons/Proactive.astro';
// import EmpathyIcon from '../icons/Empathy.astro';
import TransformIcon from '../icons/Transform.astro';

---
<section class="container mx-auto  animate-fade-in bg-card rounded-lg "  id="SoftSkills">
    <h2 class="text-2xl font-bold mb-4 p-4 text-center  text-white dark:text-neutral-800 " data-translate="personalskills.title"></h2>
    <div class=" grid grid-cols-1 md:grid-cols-2 p-4 lg:grid-cols-3 gap-4 md:gap-8" >
      <div >
        <h3 class="flex gap-x-3 text-xl font-bold mb-2 md:mb-4  text-white dark:text-black" ><i class="fas fa-clock text-purple-500">
          </i><TimeIcon class="size4" /> <span  data-translate="personalskills.time"></span></h3>
        <p id="timeManagementDescription" class=" mb-4 text-gray-100 dark:text-neutral-700" data-translate="personalskills.timecontent"></p>
      </div>
      <div >
        <h3 class="flex gap-x-3 text-xl font-bold mb-2 md:mb-4  text-white dark:text-black" ><i class="fas fa-users text-green-500">
          </i> <GroupIcon class="size4" /><span  data-translate="personalskills.team"></span></h3>
        <p id="teamworkDescription" class=" mb-4 text-gray-100 dark:text-neutral-700" data-translate="personalskills.teamcontent"></p>
      </div>
      <div >
        <h3 class="flex gap-x-3 text-xl font-bold mb-2 md:mb-4  text-white dark:text-black" ><i class="fas fa-lightbulb text-yellow-500">
          </i> <BulbIcon class="size4" /> <span  data-translate="personalskills.problem"></span></h3>
        <p id="problemSolvingDescription" class=" mb-4 text-gray-100 dark:text-neutral-700" data-translate="personalskills.problemcontent"></p>
      </div>
      <div >
        <h3 class="flex gap-x-3 text-xl font-bold mb-2 md:mb-4  text-white dark:text-black"><i class="fas fa-comments text-blue-500">
          </i> <ComunicationIcon class="size4"/><span  data-translate="personalskills.comunication"></span></h3>
        <p id="communicationDescription" class=" mb-4 text-gray-100 dark:text-neutral-700" data-translate="personalskills.comunicationcontent"></p>
      </div>
      
      <div >
        <h3 class="flex gap-x-3 text-xl font-bold mb-2 md:mb-4  text-white dark:text-black" ><i class="fas fa-rocket text-orange-500">
          </i><ProactiveIcon class="size4" /> <span  data-translate="personalskills.proactive"></span></h3>
        <p id="proactivityDescription" class="  mb-4 text-gray-100 dark:text-neutral-700" data-translate="personalskills.proactivecontent"></p>
      </div>
      <div >
        <h3 class="flex gap-x-3 text-xl font-bold md:mb-4  text-white dark:text-black" ><i class="fas fa-thumbs-up text-gray-500">
          </i><TransformIcon class="size4" /> <span  data-translate="personalskills.empathy"></span></h3>
        <p id="empathyDescription" class=" text-gray-100 dark:text-neutral-700" data-translate="personalskills.empathycontent"></p>
      </div>
    </div>
  </section>
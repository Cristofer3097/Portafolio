<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sideNav = document.getElementById('side-menu');
    const navLinks = sideNav.querySelectorAll('a'); // Selecciona los enlaces del menú lateral
  
    window.addEventListener('scroll', () => {
      let current = '';
      const sections = document.querySelectorAll('section');
      const scrollPosition = window.pageYOffset + window.innerHeight / 2;
  
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        const sectionHeight = section.offsetHeight;
  
        // Verifica si el scrollPosition está dentro de la sección
        if (scrollPosition >= sectionTop && scrollPosition <= sectionTop + sectionHeight) {
          current = section.getAttribute('id');
        }
      });
  
      // Asigna "sobremi" a las secciones relacionadas
      if (['skills', 'education', 'certificate'].includes(current)) {
        current = 'sobremi';
      }
  
      // Aplica el fondo solo al enlace activo
      navLinks.forEach(link => {
        link.classList.remove('bg-violet-950', 'dark:bg-blue-700','dark:text-white');
        if (link.getAttribute('href').includes(current)) {
          link.classList.add('bg-violet-950', 'dark:bg-blue-700', 'text-white', 'dark:text-white');
        }
      });
    });
  });
  </script>